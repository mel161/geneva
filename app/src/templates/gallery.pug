extends ./views/_layout.pug
block vars
  - var pageTitle = 'Gallery'
  - var bodyClass = 'gallery'

block content
  block content
    .page
      //- Menu Button
      button.btn.btn--nav-toggle#js-nav-toggle
        svg.inline-svg(xmlns='http://www.w3.org/2000/svg', viewBox='0 0 32 22.5')
          g.svg-menu-toggle
            path.bar(d='M20.945 8.75c0 .69-.5 1.25-1.117 1.25H3.141c-.617 0-1.118-.56-1.118-1.25s.5-1.25 1.118-1.25h16.688c.616 0 1.116.56 1.116 1.25z')
            path.bar(d='M20.923 15c0 .689-.501 1.25-1.118 1.25H3.118C2.5 16.25 2 15.689 2 15s.5-1.25 1.118-1.25h16.687c.617 0 1.118.561 1.118 1.25z')
            path.bar(d='M20.969 21.25c0 .689-.5 1.25-1.117 1.25H3.164c-.617 0-1.118-.561-1.118-1.25S2.546 20 3.164 20h16.688c.617 0 1.117.561 1.117 1.25z')
      //- Menu Button End
      //- Top Panel
      include includes/_top-panel
      //- Top Panel End
      //- Section
      section.section.section--gallery.section--home#js-top
        .card.card--gallery
          .card__image(style="background-image:url(./assets/img/gallery-1-thumb.jpg)")
        .card.card--gallery
          .card__image(style="background-image:url(./assets/img/gallery-2-thumb.jpg)")
        .card.card--gallery.card--gallery-full
          .card__image(style="background-image:url(./assets/img/gallery-3-thumb.jpg)")
        .card.card--gallery
          .card__image(style="background-image:url(./assets/img/gallery-4-thumb.jpg)")
        .card.card--gallery
          .card__image(style="background-image:url(./assets/img/gallery-5-thumb.jpg)")
        .card.card--gallery.card--gallery-full
          .card__image(style="background-image:url(./assets/img/gallery-6-thumb.jpg)")
                
    //- Footer
    include includes/_footer
    //- Footer End  
