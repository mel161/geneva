extends ./views/_layout.pug
block vars
  - var pageTitle = 'Gallery'
  - var bodyClass = 'gallery'

block content
  block content
    .page
      //- Top Panel
      include includes/_top-panel
      //- Top Panel End
      //- Section
      section.section.section--gallery.section--home
        h2.heading.heading--hide Галерея
        .section__inner
          //- a(href="./assets/img/gallery-1.jpg", itemprop='contentUrl', data-size='4800x3004', data-index='0').card
          .card
            .card__image(style="background-image:url(./assets/img/gallery-1-thumb.jpg)")
            .card__inner
          //- a(href="./assets/img/gallery-2.jpg", itemprop='contentUrl', data-size='4794x3000', data-index='1').card
          .card
            .card__image(style="background-image:url(./assets/img/gallery-2-thumb.jpg)")
            .card__inner
          //- a(href="./assets/img/gallery-3.jpg", itemprop='contentUrl', data-size='4794x3000', data-index='2').card.card--full
          .card.card--full
            .card__image(style="background-image:url(./assets/img/gallery-3-thumb.jpg)")
            .card__inner
          //- a(href="./assets/img/gallery-4.jpg", itemprop='contentUrl', data-size='4794x3000', data-index='3').card
          .card
            .card__image(style="background-image:url(./assets/img/gallery-4-thumb.jpg)")
            .card__inner
          //- a(href="./assets/img/gallery-5.jpg", itemprop='contentUrl', data-size='4794x3000', data-index='4').card
          .card
            .card__image(style="background-image:url(./assets/img/gallery-5-thumb.jpg)")
            .card__inner
          //- a(href="./assets/img/gallery-6.jpg", itemprop='contentUrl', data-size='4794x3000', data-index='5').card.card--full
          .card.card--full
            .card__image(style="background-image:url(./assets/img/gallery-6-thumb.jpg)")
            .card__inner
          //- .picture(itemscope='', itemtype='http://schema.org/ImageGallery')
          //-   figure(itemprop='associatedMedia', itemscope='', itemtype='http://schema.org/ImageObject')
          //-     a(href='./assets/img/home-card-1.jpg', itemprop='contentUrl', data-size='1000x667', data-index='0')
          //-       img(src='./assets/img/home-card-1.jpg', height='400', width='600', itemprop='thumbnail', alt='Beach')
          //-   figure(itemprop='associatedMedia', itemscope='', itemtype='http://schema.org/ImageObject')
          //-     a(href='./assets/img/home-card-2.jpg', itemprop='contentUrl', data-size='1000x667', data-index='1')
          //-       img(src='./assets/img/home-card-2.jpg', height='400', width='600', itemprop='thumbnail', alt='')
          // Root element of PhotoSwipe. Must have class pswp.
          .pswp(tabindex='-1', role='dialog', aria-hidden='true')
            //
              Background of PhotoSwipe.
              It's a separate element as animating opacity is faster than rgba().
            .pswp__bg
            // Slides wrapper with overflow:hidden.
            .pswp__scroll-wrap
              //
                Container that holds slides.
                PhotoSwipe keeps only 3 of them in the DOM to save memory.
                Don't modify these 3 pswp__item elements, data is added later on.
              .pswp__container
                .pswp__item
                .pswp__item
                .pswp__item
              // Default (PhotoSwipeUI_Default) interface on top of sliding area. Can be changed.
              .pswp__ui.pswp__ui--hidden
                .pswp__top-bar
                  // Controls are self-explanatory. Order can be changed.
                  .pswp__counter
                  button.pswp__button.pswp__button--close(title='Close (Esc)')
                  button.pswp__button.pswp__button--share(title='Share')
                  button.pswp__button.pswp__button--fs(title='Toggle fullscreen')
                  button.pswp__button.pswp__button--zoom(title='Zoom in/out')
                  // Preloader demo http://codepen.io/dimsemenov/pen/yyBWoR
                  // element will get class pswp__preloader--active when preloader is running
                  .pswp__preloader
                    .pswp__preloader__icn
                      .pswp__preloader__cut
                        .pswp__preloader__donut
                .pswp__share-modal.pswp__share-modal--hidden.pswp__single-tap
                  .pswp__share-tooltip
                button.pswp__button.pswp__button--arrow--left(title='Previous (arrow left)')
                button.pswp__button.pswp__button--arrow--right(title='Next (arrow right)')
                .pswp__caption
                  .pswp__caption__center
                
    //- Footer
    include includes/_footer
    //- Footer End  
