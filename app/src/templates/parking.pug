extends ./views/_layout.pug
block vars
  - var pageTitle = 'Parking'
  - var bodyClass = 'parking'

block content
  .page
    //- Menu Button
    button.btn.btn--nav-toggle#js-nav-toggle
      svg.inline-svg(xmlns='http://www.w3.org/2000/svg', viewBox='0 0 32 22.5')
        g.svg-menu-toggle
          path.bar(d='M20.945 8.75c0 .69-.5 1.25-1.117 1.25H3.141c-.617 0-1.118-.56-1.118-1.25s.5-1.25 1.118-1.25h16.688c.616 0 1.116.56 1.116 1.25z')
          path.bar(d='M20.923 15c0 .689-.501 1.25-1.118 1.25H3.118C2.5 16.25 2 15.689 2 15s.5-1.25 1.118-1.25h16.687c.617 0 1.118.561 1.118 1.25z')
          path.bar(d='M20.969 21.25c0 .689-.5 1.25-1.117 1.25H3.164c-.617 0-1.118-.561-1.118-1.25S2.546 20 3.164 20h16.688c.617 0 1.117.561 1.117 1.25z')
    //- Menu Button End
    //- Top Panel
    include includes/_top-panel
    //- Top Panel End
    main.content#js-top
      header.header.header--main
        .header__inner   
          h1.heading.heading--main.heading--single Подземный паркинг
      section.section.section--horizontal
        .container
          .section__header
            h2.section__title Всему свое место. Вашему автомобилю тоже
          .section__inner
            p.section__text Ваш автомобиль будет ждать встречи с вами в безопасности и тепле на двухуровневом подземном паркинге. Снег, дождь, метель? Не важно. На паркинг вы попадаете, минуя улицу, спустившись на скоростном лифте прямо из дома.
            p.section__text Необходимости тратить время на поиски больше не возникнет — ваше место будет ждать вас в любое время суток. 
      .container.container--parking
        img(src="./assets/img/parking.jpg" alt="Схема парковки")
      
    //- Footer
    include includes/_footer
    //- Footer End  
